# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

	# If you have the vagrant-cachier plugin installed, it can cache apt packages between rebuilds for you
	# vagrant plugin install vagrant-cachier
	if Vagrant.has_plugin?("vagrant-cachier")
		# Configure cached packages to be shared between instances of the same base box.
		# More info on http://fgrehm.viewdocs.io/vagrant-cachier/usage
		config.cache.scope = :box
		config.cache.auto_detect = false
		config.cache.enable :apt
	end

  if Vagrant.has_plugin?("vagrant-vbguest")
    config.vbguest.auto_update = false
  end


  #
  # For WEATHERMAP_VERSION="rsync | git":
	config.vm.synced_folder "../../", "/network-weathermap"

	#
	# For WEATHERMAP_VERSION="mount":
	config.vm.synced_folder "../../", "/var/www/html/cacti/plugins/weathermap"

  config.vm.define :develop16 do |develop16|
	  develop16.vm.provision :shell, :path => "vagrant-cacti-develop16.sh", privileged: true
	  develop16.vm.box = "ubuntu/xenial64"

	  # Forward apache.
	  develop16.vm.network "forwarded_port", guest:80, host: 8017

	  # Forward MySQL.
	  #config.vm.network "forwarded_port", guest: 3306, host: 3306

	  develop16.vm.hostname = "weathermap-dev-16"
	  develop16.vm.post_up_message = "Cacti should be available on http://localhost:8017/cacti"
  end

  config.vm.define :develop18 do |develop18|
	  develop18.vm.provision :shell, :path => "vagrant-cacti-develop18.sh", privileged: true
	  develop18.vm.box = "ubuntu/bionic64"

	  # Forward apache.
	  develop18.vm.network "forwarded_port", guest:80, host: 8016

	  # Forward MySQL.
	  #config.vm.network "forwarded_port", guest: 3306, host: 3306

	  develop18.vm.hostname = "weathermap-dev-18"
	  develop18.vm.post_up_message = "Cacti should be available on http://localhost:8016/cacti"
  end

  config.vm.provider "virtualbox" do |vb|
    # Force time synchronisation between host and guest, if the clock is more than 5 seconds out of sync.
    vb.customize [ "guestproperty", "set", :id, "/VirtualBox/GuestAdd/VBoxService/--timesync-set-threshold", 5000 ]

    # The memory to use.
    vb.memory = 2048

    # The number of CPUs
    vb.cpus = 2

    # The virtual box name
    vb.name = "weathermap-dev"
  end

end
